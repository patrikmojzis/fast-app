# Development Environment Configuration
# Copy this file to .env.debug and configure for local development

# Application Settings
APP_NAME=fast_app
ENV=debug
LOG_LEVEL=DEBUG

# Docker
MAP_ASGI_PORT=8000
MAP_REDIS_PORT=6379

# Database Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=fast-app

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_CACHE_DB=15
REDIS_DATABASE_CACHE_DB=14
REDIS_BROADCAST_DB=13
REDIS_SCHEDULER_DB=12

# Queue
QUEUE_DRIVER=sync

# Security
SECRET_KEY=dev-secret-key-not-for-production
AUTH_JWT_ALGORITHM=HS256
ACCESS_TOKEN_LIFETIME=900
REFRESH_TOKEN_LIFETIME=604800

# Email Configuration (for development/testing)
MAIL_DRIVER=log
MAIL_SERVER=
MAIL_PORT=
MAIL_LOGIN=
MAIL_PASSWORD=
MAIL_FROM=

# Testing
TEST_DB_NAME={project_name}_test

# Localisation
LOCALE_DEFAULT=en
LOCALE_FALLBACK=en
LOCALE_PATH=