# Development Environment Configuration
# Copy this file to .env.debug and configure for local development

# Application Settings
APP_NAME={project_name}
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE={project_name}_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_PREFIX=/api/v1
API_RELOAD=true

# Security
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# Email Configuration (for development/testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# Development Tools
ENABLE_DOCS=true
ENABLE_OPENAPI=true

# Testing
TEST_DATABASE={project_name}_test

# Logging
LOG_FILE=logs/{project_name}.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s