# Docker Environment Configuration
# Copy this file to .env.docker and configure for your Docker setup

# Application Settings
APP_NAME={project_name}
APP_ENV=docker
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
MONGO_URI=mongodb://mongo:27017
DB_NAME={project_name}_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_QUEUE_DB=0
REDIS_CACHE_DB=1
REDIS_DATABASE_CACHE_DB=2
REDIS_BROADCAST_DB=3
REDIS_CRON_DB=4

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_RELOAD=false

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Optional features
ENABLE_DOCS=true
ENABLE_OPENAPI=true
TEST_DB_NAME={project_name}_test

# Logging
LOG_FILE=logs/{project_name}.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External Services
# Add your external service configurations here
